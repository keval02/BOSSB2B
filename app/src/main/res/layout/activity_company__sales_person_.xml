<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company__sales_person_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nivida.bossb2b.Company_SalesPerson_Activity">

    <include layout="@layout/custom_back_toolbar"
        android:id="@+id/toolbar"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/boss_logoo"
android:layout_marginBottom="40dp"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select User Type"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#396085"
                android:layout_margin="10dp"/>

            <RadioGroup

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdo_group_select"
                android:gravity="center">

                <RadioButton
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Distributor"
                    android:padding="10dp"
                    android:checked="true"
                    android:background="@drawable/border_slider"
                    android:theme="@style/MyRadioButton1"
                    android:layout_margin="10dp"
                    android:id="@+id/rdo_distributor"
                    android:layout_gravity="center"/>

                <RadioButton
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Retailer"
                    android:padding="10dp"
                    android:background="@drawable/border_slider"
                    android:theme="@style/MyRadioButton1"
                    android:layout_margin="10dp"
                    android:id="@+id/rdo_retailer"
                    android:layout_gravity="center"/>


            </RadioGroup>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Next"
                android:textColor="#FFF"
                android:background="#396085"
                android:id="@+id/btn_next"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
