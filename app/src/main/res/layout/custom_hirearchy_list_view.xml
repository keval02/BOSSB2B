<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_distributor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_userdistributor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/disfifty" />

        <TextView
            android:id="@+id/txt_dis_names"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="start|center"
            android:padding="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#424242"
            android:textSize="14sp"

            />


        <ImageView
            android:id="@+id/img_disinfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/infonew"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_underPersons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:visibility="gone"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>