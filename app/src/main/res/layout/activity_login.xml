<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boss_loginn"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:orientation="vertical"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="10dp"
                android:text="LOGIN"
                android:textColor="#ffffff"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/edt_phoneno"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/textboder"
                android:drawableLeft="@drawable/phn"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:gravity="start|center"
                android:hint="Enter Mobile Number / Email Id   "
                android:inputType="textWebEmailAddress"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursor"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="sans-serif"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:inputType="textWebPassword"
                android:background="@drawable/textboder"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="5dp"
                android:gravity="start|center"
                android:hint="Enter Password"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursor"
                android:textColorHint="#fff" />

            <TextView
                android:id="@+id/txt_forgotpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="end|center"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/textboder"
                android:padding="5dp"
                android:text="LOGIN"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>