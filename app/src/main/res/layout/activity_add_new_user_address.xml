<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_user_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nivida.bossb2b.AddNewUserAddress"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <include layout="@layout/custom_back_toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#396085"
                android:text="Customer Details"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#396085"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textSize="20sp"
                
android:textColor="#396085"
                android:text="Permanent Address"
                />
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:background="@drawable/black_underline"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:text="Address Line1"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/et_addline1"
                android:hint="Flat No , Building No"
                android:background="@drawable/edittextborder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:text="Address Line 2"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/ic_place"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/et_addline2"
                android:hint=" Street No , Locality"
                android:background="@drawable/edittextborder"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Address Line3"
                android:visibility="gone"
                android:textSize="16sp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/et_addline3"
                android:hint=" Landmark , Area"
                android:background="@drawable/edittextborder"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Landmark"
                android:visibility="gone"
                android:textSize="16sp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/et_landmark"
                android:hint=" Landmark , Area"
                android:background="@drawable/edittextborder"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:text="Pin Code"
                android:textSize="16sp"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_place"
                android:textSize="14sp"
                android:maxLength="6"
                android:drawablePadding="10dp"
                android:id="@+id/et_pincode"
                android:inputType="number"
                android:background="@drawable/edittextborder"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="State"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textSize="16sp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/ic_glob"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/spn_state"
                android:background="@drawable/spinner_bg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="City"
                android:visibility="gone"
                android:textSize="16sp"/>
            <Spinner

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/spn_city"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_save"
                    android:layout_marginTop="10dp"
                    android:background="#396085"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <Button
                    android:id="@+id/btn_reset"
                    android:layout_marginTop="10dp"
                    android:background="#396085"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:text="Reset"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
