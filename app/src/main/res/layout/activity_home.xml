<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nivida.bossb2b.HomeActivity">

    <include
        android:id="@+id/toolbar_back"
        layout="@layout/custom_home_toolbar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/home_border"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/mainScroll">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/lv_date"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="2dp"
                        >

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="25dp"
                            android:padding="8dp"
                            android:text="22-12-2016"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/route_start"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"

                                android:background="#ffffff"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Route Start"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"

                                />

                            <TextView
                                android:id="@+id/start_time"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center|end"
                                android:layout_marginRight="5dp"
                                android:gravity="center|end"
                                android:padding="5dp"
                                android:text="3.22 pm"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </FrameLayout>

                        <FrameLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/route_end"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"

                                android:background="#ffffff"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Route End"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                            <TextView
                                android:id="@+id/last_time"
                                android:layout_width="93dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center|end"
                                android:layout_marginRight="5dp"
                                android:gravity="center|end"
                                android:padding="2dp"
                                android:text="Time"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_list"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ListView
                            android:id="@+id/meeting_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="5dp"
                            android:nestedScrollingEnabled="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_vendor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <Button
                                android:id="@+id/vendor"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Retailer / Distributor"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txt_vendor_name"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom|start"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="time"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/vendor_time"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom|end"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text=""
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/new_vendor"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:padding="5dp"
                                android:text="New Retailer/Distributor"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </FrameLayout>
                    </LinearLayout>




                            <LinearLayout
                                android:id="@+id/list_hide"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ListView
                                    android:id="@+id/lists"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_gravity="start"
                                    android:layout_margin="5dp"
                                    android:nestedScrollingEnabled="true" />

                            </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:id="@+id/txt_searchby_company"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/textboder"
                            android:gravity="center"
                            android:hint="Search By FirmName"
                            android:imeOptions="actionSearch"
                            android:inputType="textPersonName"
                            android:padding="5dp"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/txt_searchby_person"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/textboder"
                            android:gravity="center"
                            android:hint="Search By FirmName"
                            android:inputType="textPersonName"
                            android:padding="5dp"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_new_start_meeting"
                            android:layout_width="242dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Start Meeting"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_new_start_meeting_time"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_margin="1dp"
                            android:padding="5dp"
                            android:text="Time"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/new_order_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/btn_new_place_order"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:padding="5dp"
                                android:text="Place Order"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"

                                />

                            <ImageView
                                android:id="@+id/im_cemara_direct_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:padding="5dp"
                                android:src="@drawable/cameraaa"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_direct_cemara"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/im_direct_cemara"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:layout_marginTop="3dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <EditText
                                android:id="@+id/new_edit_comment"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/textboder"
                                android:focusableInTouchMode="true"
                                android:gravity="start|center"
                                android:hint="Common Narration"
                                android:padding="5dp"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff"
                                android:textCursorDrawable="@drawable/cursor"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <RadioGroup
                                android:id="@+id/rg_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rb_radio1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Cold"
                                    android:textColor="#ffffff"
                                    android:theme="@style/MyRadioButton" />

                                <RadioButton
                                    android:id="@+id/rb_radio2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Average"
                                    android:textColor="#ffffff"
                                    android:theme="@style/MyRadioButton" />

                                <RadioButton
                                    android:id="@+id/rb_radio3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Hot"
                                    android:textColor="#ffffff"
                                    android:theme="@style/MyRadioButton" />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_new_end_meeting"
                                android:layout_width="240dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="End Meeting"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"

                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <FrameLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btn_start_meeting"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Start Meeting"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txt_start_meeting_time"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:gravity="center|end"
                                android:padding="5dp"
                                android:text="Time"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/btn_place_order"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:padding="5dp"
                                android:text="Place Order"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"

                                />

                            <ImageView
                                android:id="@+id/img_camera"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:padding="5dp"
                                android:src="@drawable/cameraaa"

                                />


                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:id="@+id/layout_cemara"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="3dp"
                                android:scrollbars="horizontal">


                            </LinearLayout>

                        </HorizontalScrollView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <EditText
                                android:id="@+id/edit_comment"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/textboder"
                                android:focusableInTouchMode="true"
                                android:gravity="start|center"
                                android:hint="Common Narration"
                                android:inputType="textCapWords"
                                android:padding="5dp"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff"
                                android:textCursorDrawable="@drawable/cursor"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"

                            android:padding="5dp">

                            <RadioGroup
                                android:id="@+id/rg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Cold"
                                    android:textColor="#ffffff"
                                    android:theme="@style/MyRadioButton" />

                                <RadioButton
                                    android:id="@+id/radio2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Average"
                                    android:textColor="#ffffff"
                                    android:theme="@style/MyRadioButton" />

                                <RadioButton
                                    android:id="@+id/radio3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Hot"
                                    android:textColor="#ffffff"
                                    android:theme="@style/MyRadioButton" />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_end_meeting"
                                android:layout_width="240dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="End Meeting"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp"

                                />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_drawer"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#fff"
            app:itemIconTint="#396085"
            app:itemTextColor="#396085"
            app:menu="@menu/menu_mainpage" />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
