<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:text="Add Area "
            android:visibility="gone"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_other_area"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Other Area Name"
            android:cursorVisible="true"
            android:gravity="start|center"
            android:background="@drawable/border_slider"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:textColor="#000"
            android:textColorHint="#9e9e9e"
            android:minLines="4"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_send_other"
                android:layout_marginTop="10dp"
                android:background="#396085"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Go"

                android:layout_marginBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <Button
                android:visibility="visible"
                android:id="@+id/btn_cancel_other"
                android:layout_marginTop="10dp"
                android:background="#808080"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
