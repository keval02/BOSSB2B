<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#e1e1e1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/logout"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_gravity="start|center"
                android:src="@drawable/boss_toolbar_final" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:gravity="center|end"
            android:orientation="horizontal"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:padding="5dp"
                    android:src="@drawable/cartnewfifty" />


                <TextView
                    android:id="@+id/updatecart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap_notification"
                    android:gravity="center"
                    android:minHeight="15dp"
                    android:minWidth="15dp"
                    android:singleLine="true"
                    android:textColor="#396085"
                    android:textSize="10sp"
                    android:visibility="gone"

                    />


            </FrameLayout>


            <ImageView

                android:id="@+id/dr_image_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/homefifty" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.Toolbar>