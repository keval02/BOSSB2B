<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nivida.bossb2b.Forgotpassword">

    <include layout="@layout/custom_back_toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="FORGOT PASSWORD"
                android:textSize="18sp"
                android:padding="8dp"
                android:gravity="center"
                android:background="#396085"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/black_underline"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textSize="16sp"

            android:textColor="#99000000"
            android:text="Email"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etreset_mobile_number"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:background="@drawable/border_slider"
            android:textColor="#99000000"
            android:padding="10dp"
            android:inputType="textWebEmailAddress"
            android:drawableLeft="@drawable/forgotemail"
            android:hint="Enter Email ID "
            android:drawablePadding="10dp"
            android:layout_height="40dp" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_resetpassword"
            android:layout_marginTop="30dp"
            android:background="#396085"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="Reset Password"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


        <Button
            android:id="@+id/btn_cancel"
            android:layout_marginTop="30dp"
            android:background="#396085"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

</LinearLayout>
    </LinearLayout>
</LinearLayout>
