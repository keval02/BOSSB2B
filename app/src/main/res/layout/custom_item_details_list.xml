<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="#EBEBEB"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/categeory_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:buttonTint="#396085"
                android:padding="1dp" />


            <TextView
                android:id="@+id/categeory_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Boss Blender (B101)"
                android:textColor="#396085"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center|start"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_outofstock"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center|end"
                android:padding="1dp"
                android:visibility="gone"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:text="Out Of Stock"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"

                />

            <ImageView
                android:id="@+id/img_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:src="@drawable/minusfiftyfilled" />

            <EditText
                android:id="@+id/edt_quantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:background="@drawable/edittextborder"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:padding="1dp"
                android:textColor="#396085"
                android:textColorHint="#396085"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:src="@drawable/plusfifty" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
