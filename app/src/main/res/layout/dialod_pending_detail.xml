<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollbarSize="3dip"
        android:visibility="visible"
        android:layout_weight="1"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:id="@+id/layout_fill_vendor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_background"
                        android:hint="Name of Person*"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:textColorHint="#c3c3c3"
                        android:digits="ABCDEFGHIJKLMNOPQRSTVUWXYZabcdefghijklmnopqrstuvwxyz "
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_Desi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="Designation*"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:textColorHint="#c3c3c3"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_Cname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColorHint="#c3c3c3"
                        android:background="@drawable/edit_background"
                        android:hint="Name of Company*"
                        android:padding="10dp"
                        android:singleLine="true" />

                </LinearLayout>
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="Address*"
                        android:textSize="16sp"
                        android:textColorHint="#c3c3c3"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="Email*"
                        android:textSize="16sp"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:textColorHint="#c3c3c3"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="Phone*"
                        android:textSize="16sp"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:textColorHint="#c3c3c3"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_otherphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="Alternate Phone"
                        android:textSize="16sp"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:textColorHint="#c3c3c3"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:background="@drawable/spinner_bg"
                        android:popupBackground="#fff"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="3dp"
                        android:id="@+id/spn_readymade_country"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:background="@drawable/spinner_bg"
                        android:popupBackground="#fff"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="3dp"
                        android:id="@+id/spn_readymade_state"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:background="@drawable/spinner_bg"
                        android:popupBackground="#fff"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="3dp"
                        android:id="@+id/spn_ready_city"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:background="@drawable/spinner_bg"
                        android:popupBackground="#fff"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="3dp"
                        android:visibility="gone"
                        android:id="@+id/spn_ready_area"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_Address1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="Address 1*"
                        android:textSize="16sp"
                        android:textColorHint="#c3c3c3"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_Address2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="Address 2*"
                        android:textSize="16sp"
                        android:textColorHint="#c3c3c3"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <EditText
                        android:id="@+id/edit_pcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/edit_background"
                        android:hint="PinCode*"
                        android:textSize="16sp"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:digits="0987654321"
                        android:maxLength="6"
                        android:textColor="#000"
                        android:textColorHint="#c3c3c3"
                        android:inputType="number"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mailto"
                android:gravity="right">
                <Button
                    android:id="@+id/btn_textedit1_skip"
                    android:layout_width="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textedit1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:textAllCaps="false"
                    android:background="@color/colorPrimary"/>
                <Button
                    android:id="@+id/btn_textedit1_done"
                    android:layout_width="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textedit1"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>